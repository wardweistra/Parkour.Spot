{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "region": "europe-west1"
  },
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/spot/**",
        "function": "spotPage"
      },
      {
        "source": "/:countryCode/:city/:spotId",
        "function": "spotPage"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
