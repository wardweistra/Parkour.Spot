rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Spots images - anyone can read, authenticated users can upload
    match /spots/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profile pictures - users can only manage their own
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General media - anyone can read, authenticated users can upload
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
